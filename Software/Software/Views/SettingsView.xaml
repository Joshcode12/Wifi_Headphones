<UserControl x:Class="Software.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Software.Views"
             mc:Ignorable="d"
             d:DesignHeight="530"
             d:DesignWidth="800"
             Foreground="LightGray">

    <Grid>
        <Grid.RowDefinitions>
            <!-- Title -->
            <RowDefinition Height="Auto" />
            <!-- Content -->
            <RowDefinition Height="Auto" />
            <!-- Reset -->
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0"
                   Text="Audio Settings"
                   FontSize="24"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0 10 0 20"
                   Foreground="White" />

        <!-- Content Grid -->
        <Grid Grid.Row="1"
              HorizontalAlignment="Center">

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="350" />
                <ColumnDefinition Width="100" />
            </Grid.ColumnDefinitions>

            <Grid.Resources>
                <!-- Slider style -->
                <Style TargetType="Slider">
                    <Setter Property="Margin"
                            Value="10" />
                    <Setter Property="TickPlacement"
                            Value="BottomRight" />
                    <Setter Property="IsSnapToTickEnabled"
                            Value="True" />
                    <Setter Property="TickFrequency"
                            Value="1" />
                </Style>

                <!-- TextBlock style -->
                <Style TargetType="TextBlock">
                    <Setter Property="VerticalAlignment"
                            Value="Center" />
                    <Setter Property="FontSize"
                            Value="18" />
                </Style>

                <!-- Right-aligned label style -->
                <Style x:Key="RightLabel"
                       TargetType="TextBlock"
                       BasedOn="{StaticResource {x:Type TextBlock}}">
                    <Setter Property="HorizontalAlignment"
                            Value="Right" />
                </Style>
            </Grid.Resources>

            <!-- Max Volume -->
            <TextBlock Grid.Row="0"
                       Grid.Column="0"
                       Style="{StaticResource RightLabel}"
                       Text="Max Volume:" />
            <Slider Grid.Row="0"
                    Grid.Column="1"
                    Minimum="80"
                    Maximum="100"
                    Value="100"
                    x:Name="MaxVolumeSlider" />
            <TextBlock Grid.Row="0"
                       Grid.Column="2"
                       Text="{Binding ElementName=MaxVolumeSlider, Path=Value, StringFormat={}{0} %}" />

            <!-- Volume Balanced -->
            <TextBlock Grid.Row="1"
                       Grid.Column="0"
                       Style="{StaticResource RightLabel}"
                       Text="Volume Balanced:" />
            <Slider Grid.Row="1"
                    Grid.Column="1"
                    Minimum="-50"
                    Maximum="50"
                    Value="0"
                    TickFrequency="5"
                    x:Name="VolumeBalancedSlider" />
            <TextBlock Grid.Row="1"
                       Grid.Column="2"
                       Text="{Binding ElementName=VolumeBalancedSlider, Path=Value, StringFormat={}{0} }" />

            <!-- Treble Control -->
            <TextBlock Grid.Row="2"
                       Grid.Column="0"
                       Style="{StaticResource RightLabel}"
                       Text="Treble Gain:" />
            <Slider Grid.Row="2"
                    Grid.Column="1"
                    Minimum="-8.0"
                    Maximum="7"
                    TickFrequency="1.5"
                    Value="0"
                    x:Name="TrebleGainSlider" />
            <TextBlock Grid.Row="2"
                       Grid.Column="2"
                       Text="{Binding ElementName=TrebleGainSlider, Path=Value, StringFormat={}{0:0.0} dB}" />

            <!-- Treble Frequency -->
            <TextBlock Grid.Row="3"
                       Grid.Column="0"
                       Style="{StaticResource RightLabel}"
                       Text="Treble Limit:" />
            <Slider Grid.Row="3"
                    Grid.Column="1"
                    Minimum="1"
                    Maximum="15"
                    Value="15"
                    x:Name="TrebleFreqSlider" />
            <TextBlock Grid.Row="3"
                       Grid.Column="2"
                       Text="{Binding ElementName=TrebleFreqSlider, Path=Value, StringFormat={}{0} kHz}" />

            <!-- Base Enhancement -->
            <TextBlock Grid.Row="4"
                       Grid.Column="0"
                       Style="{StaticResource RightLabel}"
                       Text="Base Gain:" />
            <Slider Grid.Row="4"
                    Grid.Column="1"
                    Minimum="0"
                    Maximum="15"
                    Value="0"
                    x:Name="BaseGainSlider" />
            <TextBlock Grid.Row="4"
                       Grid.Column="2"
                       Text="{Binding ElementName=BaseGainSlider, Path=Value, StringFormat={}{0} dB}" />

            <!-- Base Frequency -->
            <TextBlock Grid.Row="5"
                       Grid.Column="0"
                       Style="{StaticResource RightLabel}"
                       Text="Base Limit:" />
            <Slider Grid.Row="5"
                    Grid.Column="1"
                    Minimum="2"
                    Maximum="15"
                    Value="1"
                    x:Name="BaseFreqSlider" />
            <TextBlock Grid.Row="5"
                       Grid.Column="2"
                       Text="{Binding ElementName=BaseFreqSlider, Path=Value, StringFormat={}{0}0 Hz}" />

            <!-- Spatial Audio -->
            <TextBlock Grid.Row="6"
                       Grid.Column="0"
                       Style="{StaticResource RightLabel}"
                       Text="Spatial Audio:" />
            <CheckBox Grid.Row="6"
                      Grid.Column="1"
                      x:Name="SpatialAudioCheckBox"
                      VerticalAlignment="Center"
                      HorizontalAlignment="Center"
                      Foreground="LightGray"
                      IsChecked="True" />
        </Grid>

        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center">
            <!-- Save -->
            <Button x:Name="SaveButton"
                    Margin="20"
                    Padding="5"
                    HorizontalAlignment="Center"
                    FontSize="16"
                    Content="Save"
                    Command="{Binding SaveCommand}" />
            
            <!-- Reset -->
            <Button x:Name="ResetButton"
                    Margin="20"
                    Padding="5"
                    HorizontalAlignment="Center"
                    FontSize="16"
                    Content="Reset"
                    Command="{Binding ResetCommand}" />
        </StackPanel>
    </Grid>
</UserControl>
