<UserControl x:Class="Software.Views.FileTransferView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Software.Views"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800"
             Foreground="LightGray"
             FontSize="14">

    <Grid>
        <Grid.ColumnDefinitions>
            <!-- Left side controls -->
            <ColumnDefinition Width="Auto" />
            <!-- Right side DataGrid -->
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- LEFT SIDE -->
        <StackPanel Grid.Column="0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Margin="10">

            <TextBlock Text="File Transfer"
                       HorizontalAlignment="Center"
                       FontSize="24"
                       FontWeight="Bold"
                       Margin="0 0 0 20" />

            <!-- Select Music -->
            <Button Content="Select Music"
                    Width="200"
                    Padding="5"
                    Margin="0 0 0 10"
                    Command="{Binding SelectMusicCommand}"/>

            <!-- Transfer Method -->
            <TextBlock Text="Transfer Method:"
                       Margin="0 0 0 5" />
            <StackPanel Orientation="Horizontal"
                        Margin="0 0 0 10">
                <RadioButton Content="WiFi"
                             Foreground="LightGray"
                             GroupName="TransferMethod"
                             IsChecked="True"
                             Margin="0 0 10 0" />
                <RadioButton Content="Storage Volume"
                             GroupName="TransferMethod"
                             Foreground="LightGray" />
            </StackPanel>

            <!-- Destination -->
            <TextBlock Text="Destination:"
                       Margin="0 0 0 5" />
            <ComboBox Width="200"
                      Margin="0 0 0 10">
            </ComboBox>

            <!-- Transfer Button -->
            <Button Content="Transfer"
                    Width="200"
                    Padding="5"
                    Margin="0 0 0 10"
                    Command="{Binding TransferMusicCommand}"/>
        </StackPanel>

        <!-- RIGHT SIDE -->
        <StackPanel Grid.Column="1"
                    Margin="20 0 0 0">

            <!-- Total Listening Time -->
            <TextBlock Text="Total Listening Time: 0:00:00"
                       HorizontalAlignment="Center"
                       Margin="0 10 0 0"
                       FontWeight="SemiBold" />

            <!-- Track List DataGrid -->
            <DataGrid AutoGenerateColumns="False"
                      HeadersVisibility="Column"
                      CanUserAddRows="False"
                      CanUserDeleteRows="False"
                      IsReadOnly="True"
                      RowHeight="25"
                      Margin="0 10 0 0"
                      ItemsSource="{Binding Tracks}">

                <DataGrid.Columns>
                    <DataGridTextColumn Header="Track"
                                        Binding="{Binding Track}"
                                        Width="2*" />
                    <DataGridTextColumn Header="Album"
                                        Binding="{Binding Album}"
                                        Width="2*" />
                    <DataGridTextColumn Header="Artist(s)"
                                        Binding="{Binding Artists}"
                                        Width="1.5*" />
                    <DataGridTextColumn Header="Duration"
                                        Binding="{Binding Duration}"
                                        Width="1*" />
                    <DataGridTemplateColumn Header="Remove"
                                            Width="Auto">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="Remove"
                                        Padding="4 2"
                                        Command="{Binding DataContext.RemoveTrackCommand, 
                                                          RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                        CommandParameter="{Binding}" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
    </Grid>
</UserControl>
